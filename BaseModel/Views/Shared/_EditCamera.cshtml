@model CameraEditModel

<form id="editRoomForm" class="pt-3 d-flex">
    <div class="me-3">
        <img id="imgPreview" src="~/@Model.Img" alt="Anteprima immagine" style="max-width: 15em; margin-top: 10px; @(string.IsNullOrEmpty(Model.Img) ? "display: none;" : "")" />
    </div>
    <div class="row">
        <input hidden asp-for="IdCamera" />
        <input hidden asp-for="Img" />
        <div class="form-group col-md-4">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" type="number" placeholder="Numero camera" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Tipo" class="control-label"></label>
            <input asp-for="Tipo" class="form-control" type="text" placeholder="Esempio:Singola, Doppia" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Prezzo" class="control-label"></label>
            <input asp-for="Prezzo" class="form-control" type="number" step="0.01" placeholder="Prezzo" />
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>
        <div class="my-3">
            <label class="form-label">Immagine Camera</label>
            <input type="file" class="form-control" asp-for="imgFile">
        </div>
        <button class="btn btn-success" type="submit" onclick="SaveEditRoom()">Aggiungi</button>
    </div>
</form>
